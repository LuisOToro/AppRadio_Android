<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <solid android:color="@color/color_text2" />

        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:bottom="1dp" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners
                android:radius="1dp"
                />
            <gradient
                android:startColor="#13131b"
                android:endColor="#000000"
                android:type="radial" android:gradientRadius="480dp"
                />
        </shape>
    </item>

</layer-list>