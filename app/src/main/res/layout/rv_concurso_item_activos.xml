<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        android:background="@drawable/round_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="61dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Concursotitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Inicio"
                android:textAlignment="center"
                android:textColor="@color/textoGris"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_ConcursoFecha_Inicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="FechaInicio"
                android:textAlignment="center"
                android:textColor="@color/textoGris"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_Concursofin_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Fin"
                android:textAlignment="center"
                android:textColor="@color/textoGris"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_ConcursoFecha_fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="FechaFin"
                android:textAlignment="center"
                android:textColor="@color/textoGris"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Concursoitem_Concurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Concurso"
                android:textColor="@color/text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ConcursoRadioSegmento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Radio-segemento"
                android:textColor="@color/text_color"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_ver_concurso"
            android:layout_width="3dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_ver_concurso_24dp"
            tools:layout_editor_absoluteX="59dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>